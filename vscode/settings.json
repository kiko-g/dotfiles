  //@@ Editor Settings
  "editor.quickSuggestionsDelay": 20,
  "editor.cursorBlinking": "phase",
  "editor.suggestSelection": "first",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnPaste": true,
  "editor.fontLigatures": false,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": true,
  "editor.overviewRulerBorder": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontSize": 12.5,
  "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.indent": 5,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.acceptSuggestionOnCommitCharacter": true, // Controls whether suggestions should be accepted on commit characters. For example, in JavaScript, the semi-colon (`;`) can be a commit character that accepts a suggestion and types that character.
  "editor.acceptSuggestionOnEnter": "on", // Controls if suggestions should be accepted on 'Enter' - in addition to 'Tab'. Helps to avoid ambiguity between inserting new lines or accepting suggestions. The value 'smart' means only accept a suggestion with Enter when it makes a textual change
  "editor.suggestOnTriggerCharacters": true, // Controls if suggestions should automatically show up when typing trigger characters
  "editor.tabCompletion": "off", // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
  "editor.suggest.localityBonus": true, // Controls whether sorting favours words that appear close to the cursor
  "editor.wordBasedSuggestions": true, // Enable word based suggestions
  "editor.parameterHints.enabled": true, // Enable parameter hints
  "editor.tabSize": 4,
  "editor.formatOnSave": true,

  //@@ Git Settings
  "git.enabled": true,
  "git.enableSmartCommit": true,
  "git.decorations.enabled": false,
  "git.autofetch": true,
  "git.confirmSync": false,

  //@@ Terminal Settings
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
